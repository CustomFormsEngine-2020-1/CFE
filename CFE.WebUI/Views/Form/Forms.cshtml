
@{
    ViewData["Title"] = "Forms";
}
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h1>Created Forms</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Forms.Count > 0)
        {
            @for (int i = 0; i < ViewBag.Forms.Count; i++)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@ViewBag.Forms[i].Name</td>
                    <td>@ViewBag.Forms[i].Description</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@ViewBag.Forms[i].Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@ViewBag.Forms[i].Id">Watch</a>
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Not form to show</td>
            </tr>
        }

    </tbody>
</table>

