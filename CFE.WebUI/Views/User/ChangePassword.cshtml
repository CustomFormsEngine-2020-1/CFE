@model CFE.ViewModels.VM.Users.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
    <div class="rounded change-pass">
        <div class="container">
            <h2>Изменение пароля для пользователя @Model.Email</h2>
            <form asp-action="ChangePassword" asp-controller="User">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />

                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label">Новый пароль</label>
                    <input type="password" asp-for="NewPassword" class="form-control" placeholder="New Password" />
                </div>
                <div class="form-group padding-b-15">
                    <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
                </div>
            </form>
        </div>
    </div>